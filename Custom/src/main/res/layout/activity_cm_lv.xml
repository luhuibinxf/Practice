<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_cm_lv"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".activity.CustomActivity">

    <ImageView
        android:id="@+id/mjpg_1"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@mipmap/mjpg"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="5dp" />

    <TextView
        android:id="@+id/m_content"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/m_Title"
        android:layout_toRightOf="@+id/mjpg_1"
        android:text="@string/content"
        android:textColor="@color/lightgrey" />

    <TextView
        android:id="@+id/m_price"
        android:layout_width="wrap_content"
        android:layout_height="15dp"
        android:layout_below="@+id/m_content"
        android:layout_toEndOf="@+id/mjpg_1"
        android:layout_toRightOf="@+id/mjpg_1"
        android:text="@string/price"
        android:textColor="@color/lightgrey" />

    <TextView
        android:id="@+id/m_sales"
        android:layout_width="wrap_content"
        android:layout_height="15dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/m_content"
        android:text="@string/Number"
        android:textColor="@color/lightgrey" />

    <TextView
        android:id="@+id/m_Title"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/mjpg_1"
        android:layout_toRightOf="@+id/mjpg_1"
        android:text="@string/Title"
        android:textColor="@color/black" />

</RelativeLayout>
