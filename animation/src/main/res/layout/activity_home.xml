            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@mipmap/ic_launcher"
            android:gravity="center"
            android:text="@string/app_name"
            android:textSize="10pt" />
    </LinearLayout>


</LinearLayout>

